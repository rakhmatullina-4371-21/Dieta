@model Diet.Models.Product
@using Diet.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Список пациентов";
}

<link href="~/css/StyleSheet.css " rel="stylesheet" />
<div>
    @await Html.PartialAsync("~/Views/Shared/Header.cshtml")
</div>

<div class="col-md-7 col-lg-8 center">
    <form class="needs-validation" asp-action="OneDish">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="IdProduct" class="control-label" style="visibility: hidden;"> </label>
            <input asp-for="IdProduct" class="form-control" type="hidden" />
            <span asp-validation-for="IdProduct" class="text-danger text-black-50"></span>
            <h1 class="mb-2 text-style-grey">Блюдо</h1>
        </div>
        <div class="row g-3 ">
            <div class="form-group col-12 text-style-grey">
                <label asp-for="Product1" class="control-label"> Название блюда </label>
                <input asp-for="Product1" class="form-control" />
                <span asp-validation-for="Product1" class="text-danger text-black-50"></span>
            </div>
            <div class="col-12" style="text-align:center">
                <button class="btn btn-lg btn-style w-25 m-1" asp-controller="AdminHome" asp-action="DeleteProduct" asp-route-id="@Model.IdProduct" style="color:black;"> Удалить </button>
                <button class="btn btn-lg btn-style w-25 m-1" asp-controller="AdminHome" asp-action="OneProduct" asp-route-id="@Model.IdProduct" style="color:black;"> Сохранить </button>
            </div>
        </div>


    </form>
</div>

