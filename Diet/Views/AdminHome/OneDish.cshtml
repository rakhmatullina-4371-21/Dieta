@model Diet.Models.Dish
@using Diet.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Список пациентов";
}

<link href="~/css/StyleSheet.css " rel="stylesheet" />
<div>
    @await Html.PartialAsync("~/Views/Shared/Header.cshtml")
</div>

<div class="col-md-7 col-lg-8 center">
    <form class="needs-validation" asp-action="OneDish">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="IdDish" class="control-label" style="visibility: hidden;"> </label>
            <input asp-for="IdDish" class="form-control" type="hidden" />
            <span asp-validation-for="IdDish" class="text-danger text-black-50"></span>
            <h1 class="mb-2 text-style-grey">Блюдо</h1>
        </div>
        <div class="row g-3 ">
            <div class="form-group col-12 text-style-grey">
                <label asp-for="Dish1" class="control-label"> Название блюда </label>
                <input asp-for="Dish1" class="form-control" />
                <span asp-validation-for="Dish1" class="text-danger text-black-50"></span>
            </div>
            <div class="form-group col-sm-6 text-style-grey">
                <label asp-for="Calories" class="control-label"> Количество калорий (на 100г) </label>
                <input asp-for="Calories" class="form-control" />
                <span asp-validation-for="Calories" class="text-danger text-black-50"></span>
            </div>
            <div class="form-group col-sm-6 text-style-grey">
                <label asp-for="Protein" class="control-label"> Количество белков (на 100г) </label>
                <input asp-for="Protein" class="form-control" />
                <span asp-validation-for="Protein" class="text-danger text-black-50"></span>
            </div>

            <div class="form-group col-sm-6 text-style-grey">
                <label asp-for="Fats" class="control-label"> Количество жиров (на 100г)</label>
                <input asp-for="Fats" class="form-control" />
                <span asp-validation-for="Fats" class="text-danger text-black-50"></span>
            </div>
            <div class="form-group col-sm-6 text-style-grey">
                <label asp-for="Carbohydrates" class="control-label">  Количество углеводов (на 100г)</label>
                <input asp-for="Carbohydrates" class="form-control" />
                <span asp-validation-for="Carbohydrates" class="text-danger text-black-50"></span>
            </div>
            <div class="col-12" style="text-align:center">
                <button class="btn btn-lg btn-style w-50 m-1" asp-controller="AdminHome" asp-action="ProdSelect" asp-route-id="@Model.IdDish" style="color:black;"> Далее </button>
            </div>
        </div>


    </form>
</div>

<select class="s" multiple="multiple">
    <option value="1">one</option>
    <option value="2" selected>two</option>
    <option value="3">three</option>
</select>

