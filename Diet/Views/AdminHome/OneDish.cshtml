@model Diet.Models.ViewModels.ListProductsInDishModel
@using Diet.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Блюдо";
}

<link href="~/css/StyleSheet.css " rel="stylesheet" />
<div>
    @await Html.PartialAsync("~/Views/Shared/Header.cshtml")
</div>

<div class="col-md-7 col-lg-8 center">
    <form class="needs-validation" asp-action="OneDish">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="@Model.OneDish.IdDish" class="control-label" style="visibility: hidden;"> </label>
            <input asp-for="@Model.OneDish.IdDish" class="form-control" type="hidden" />
            <span asp-validation-for="@Model.OneDish.IdDish" class="text-danger text-black-50"></span>
            <h1 class="mb-2 text-style-grey">Блюдо</h1>
        </div>
        <div class="row g-3 ">
            <div class="form-group col-12 text-style-grey">
                <label asp-for="@Model.OneDish.Dish1" class="control-label"> Название блюда </label>
                <input asp-for="@Model.OneDish.Dish1" class="form-control" />
                <span asp-validation-for="@Model.OneDish.Dish1" class="text-danger text-black-50"></span>
            </div>
            <div class="form-group col-sm-6 text-style-grey">
                <label asp-for="@Model.OneDish.Calories" class="control-label"> Количество калорий (на 100г) </label>
                <input asp-for="@Model.OneDish.Calories" class="form-control" />
                <span asp-validation-for="@Model.OneDish.Calories" class="text-danger text-black-50"></span>
            </div>
            <div class="form-group col-sm-6 text-style-grey">
                <label asp-for="@Model.OneDish.Protein" class="control-label"> Количество белков (на 100г) </label>
                <input asp-for="@Model.OneDish.Protein" class="form-control" />
                <span asp-validation-for="@Model.OneDish.Protein" class="text-danger text-black-50"></span>
            </div>

            <div class="form-group col-sm-6 text-style-grey">
                <label asp-for="@Model.OneDish.Fats" class="control-label"> Количество жиров (на 100г)</label>
                <input asp-for="@Model.OneDish.Fats" class="form-control" />
                <span asp-validation-for="@Model.OneDish.Fats" class="text-danger text-black-50"></span>
            </div>
            <div class="form-group col-sm-6 text-style-grey">
                <label asp-for="@Model.OneDish.Carbohydrates" class="control-label">  Количество углеводов (на 100г)</label>
                <input asp-for="@Model.OneDish.Carbohydrates" class="form-control" />
                <span asp-validation-for="@Model.OneDish.Carbohydrates" class="text-danger text-black-50"></span>
            </div>


            <div class="form-group bg-style-grey scroll w-100 m-3" style="height:150px;">

                @{
                    for (int i = 0; i < Model.listProduct.Count; i++)
                    {
                        <div class="form-check m-2">
                            <label asp-for="@Model.ProductInDish" class="control-label">
                                @Html.CheckBoxFor(m => m.ProductInDish[i],
                               @Model.ProductInDish[i])
                                @Model.listProduct[i].Product1
                            </label>
                        </div>

                    }
                }
            </div>
            @{
                if (Model.OneDish.Dish1 == null)
                {
                    <div class="col-12" style="text-align:center">
                        <button class="btn btn-lg btn-style w-50 m-1" asp-controller="AdminHome" asp-action="OneDish" style="color:black;"> Далее </button>
                    </div>
                }
                else
                {
                    <div class="col-6" style="text-align:center">
                        <button class="btn btn-lg btn-style w-50 m-1" asp-controller="AdminHome" asp-action="DeleteOneDish" style="color:black;"> Удалить </button>
                    </div>
                    <div class="col-6" style="text-align:center">
                        <button class="btn btn-lg btn-style w-50 m-1" asp-controller="AdminHome" asp-action="OneDish" style="color:black;"> Далее </button>
                    </div>
                }
            }

        </div>


    </form>
</div>
