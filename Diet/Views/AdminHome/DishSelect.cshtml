@model IEnumerable<Diet.Models.Dish>
@using Diet.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Список блюд";
}

<link href="~/css/StyleSheet.css " rel="stylesheet" />
<div>
    @await Html.PartialAsync("~/Views/Shared/Header.cshtml")
</div>


<link href="~/css/StyleSheet.css " rel="stylesheet" />

<div class="container row w-100 bloc-center">
    <div class="col-sm m-3 text-style-grey "style="height: 67%;">
        <h1 class="border-bottom  m-3 p-1">Список блюд</h1>
        <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
            <a class="text-style-grey" asp-action="OneDish" asp-controller="AdminHome"><font style="vertical-align: inherit;   display: block; text-align: right;"><font style="vertical-align: inherit;">Добавить</font></font></a>
        </div>
        @{
            foreach (var item in Model)
            {
                <div class="d-flex text-muted pt-3">

                    <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
                        <div class="d-flex justify-content-between" >
                            <strong class="text-style-grey">  @Html.DisplayFor(modelItem => item.Dish1) </strong>
                            <a class="text-style-grey" asp-route-id="@item.IdDish" asp-action="OneDish" asp-controller="AdminHome">Подробнее</a>
                        </div>
                    </div>
                </div>

            }
        }
    </div>
    <div class="col-sm  m-3 p-1 text-style-grey">
        <h1 class="border-bottom  m-3 p-1">Список продуктов</h1>
        <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
                <a class="text-style-grey" asp-action="OneProduct" asp-controller="AdminHome"><font style="vertical-align: inherit;   display: block; text-align: right;"><font style="vertical-align: inherit;">Добавить</font></font></a>
        </div>

        @{
            foreach (var item in Product.SelectProducts())
            {
                <div class="d-flex text-muted pt-3">

                    <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
                        <div class="d-flex justify-content-between">
                            <strong class="text-style-grey">  @Html.DisplayFor(modelItem => item.Product1) </strong>
                            <a class="text-style-grey" asp-route-id="@item.IdProduct" asp-action="OneProduct" asp-controller="AdminHome">Подробнее</a>
                        </div>
                    </div>
                </div>

            }
        }
    </div>

    </div>