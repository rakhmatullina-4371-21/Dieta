@model Diet.Models.Patient
@using Diet.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Меню";
}

<link href="~/css/StyleSheet.css " rel="stylesheet" />
<div>
    @await Html.PartialAsync("~/Views/Shared/Header.cshtml")
</div>
<form>

        <div class="col-12 align-items-center text-center m-1 center" style="vertical-align:central">
            <h1 class="display-5 fw-bold lh-1 mb-3 text-style-grey">Здравствуйте,@Model.Surname @Model.Name @Model.Lastname <br /></h1>
            <p class="lead text-style-grey">Спасибо, что выбрали наш сервис! </p>
            <div class="d-grid  gap-2 d-md-flex justify-content-md-start m-5">
                <button type="submit" class=" btn btn-lg btn-style w-75 m-1" asp-controller="PatientHome" asp-action="Card" asp-route-id="@Model.IdPatient "> Моя карта</button>
                <button type="submit" class="btn btn-lg btn-style w-75 m-1" asp-controller="PatientHome" asp-action="Diary" asp-route-id="@Model.IdPatient ">Трекер питания</button>
            </div>
        </div>

</form>



